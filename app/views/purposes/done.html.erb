 <div class="container-fluid">
  <div class="row" style="background-color: #99ccff; color: #0066cc;">
      <h2 class="ml-5 pl-3">達成目標の記録</h2>
  </div>
 </div>

<div class="container mt-4">
    <div class="row">
        <div class="offset-sm-2 col-sm-8 mb-2"><h3 style="color: #0066cc;">達成期間の記録</h3>
        </div>
    </div>
    <div class="row">
        <div class="offset-sm-2 col-sm-8 mt-2">
        <%= form_with(model: @purpose, local: true) do |f| %>
        　<%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
              <%= f.label :start_day, '開始日' %>
              <%= f.date_select :start_day, use_two_digit_numbers: true %>
              <%= f.label :end_day, '終了日' %>
              <%= f.date_select :end_day, use_two_digit_numbers: true %>
            　<%= f.hidden_field :complete , value: true %>
          </div>
          <div class="form-group">
          <%= f.submit '編集完了', class: 'btn btn-primary btn-block mt-2' %>
          </div>
        <% end %>
    </div>
    </div>
</div>