 <div class="container-fluid">
  <div class="row pt-2 pb-1" style="background-color: #838d93; color: white;">
      <h2 class="font-weight-bold ml-5 pl-3">達成目標の記録</h2>
  </div>
 </div>

<div class="container mt-4">
    <div class="row">
        <div class="offset-sm-3  mt-4 text-secondary"><h3>達成期間の記録</h3>
        </div>
    </div>
    <div class="row text-secondary">
        <div class="offset-sm-3 col-sm-6 mt-2" style="text-align:center;">
        <%= form_with(model: @purpose, local: true) do |f| %>
        　<%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
              <%= f.label :start_day, '開始日' %>
              <%= f.date_select :start_day, use_two_digit_numbers: true , class: 'form-control' %>
              <%= f.label :end_day, '終了日' %>
              <%= f.date_select :end_day, use_two_digit_numbers: true , class: 'form-control' %>
            　<%= f.hidden_field :complete , value: true %>
          </div>
          <div class="form-group">
          <%= f.submit '編集完了', class: 'btn btn-secondary btn-block mt-2' %>
          </div>
        <% end %>
    </div>
    </div>
</div>