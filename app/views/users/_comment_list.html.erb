
<% if review_purposes.any? %>
   <% review_purposes.each do |purpose| %>
          <div class="row  border border-primary">
              <div class="col-sm-2 mt-2" style="text-align : center;">
                    <figure class="figure">
                                 <img class="mt-2 rounded figure-img " src="<%= gravatar_url(purpose.user, { size: 80 }) %>" alt="">
                                 <figcaption class="figure-caption"><%=link_to purpose.user.name, user_path(purpose.user) %>
                                 </figcaption>
                             </figure>
              </div>
              <div class="col-sm-10 mt-3">
                  <div class="row">
                      <div class="ml-2 col-sm-8">
                          <h4>目標:  <%=purpose.content%></h4>
                      </div>
                  </div>
                  <div class="row ml-2 mt-2">
                     <div class="col-sm-11 border border-primary mb-1" style="min-height: 15px;">
                        <% if purpose.reviews.where(user_id: user.id).any? %>
                        <%= purpose.reviews.where(user_id: user.id).last.content %>
                        <%end%>
                     </div>
                 </div>
                 <div class="row ml-1 mt-2">
                      <% if purpose.reviews.where(user_id: user.id).any? %>
                        <small class="col-sm-6" style="color:blue">投稿日時:<%= purpose.reviews.where(user_id: user.id).last.created_at.strftime("%Y/%m/%d %H:%M") %></small>
                        <div class="offset-sm-2 col-sm-2">
                            <%=link_to "Review" , review_purpose_path(purpose), class: 'btn btn-info btn-sm'%>
                        </div>
                      <%else%>
                        <div class="offset-sm-8 col-sm-2">
                            <%=link_to "Review" , review_purpose_path(purpose), class: 'btn btn-info btn-sm'%>
                        </div>
                    <%end%>
                 </div>
              </div>
          </div>
    <%end%>
<% end %>