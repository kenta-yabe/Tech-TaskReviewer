 <div class="container-fluid">
  <div class="row pt-2 pb-1" style="background-color: #838d93; color: white;">
  <h2 class="font-weight-bold ml-5 pl-3">ユーザー詳細 (ユーザー名:  <%= @user.name %>)</h2>
  </div>
 </div>

<div class="container mt-4">
   <div class="row">
    <h3 class="font-weight-bold text-secondary">ユーザー目標リスト</h3>
   </div>
 </div> 

 <div class="container mt-2" style="max-height : 400px; overflow: scroll; border: #838d93 10px solid; background-color: #838d93;">
    <%= render 'user_purpose', purposes: @purposes, user: @user %>
 </div>


<!--新規目標作成ボタン-->
<%if current_user==@user%>
 <div class="container mt-4">
    <div class="row">
      <div class="offset-sm-9">
        <%= link_to '新規目標の作成', new_purpose_path , class: "btn btn-lg btn-secondary" %>
      </div>
    </div>
 </div>
<%end%>

<div class="container mt-4">
   <div class="row">
    <h3 class="font-weight-bold text-secondary">レビューコメントリスト</h3>
   </div>
 </div> 

 <div class="container mt-2" style="max-height : 600px; overflow: scroll; border: #838d93 10px solid; background-color: #838d93;">
    <%= render 'comment_list', review_purposes: @review_purposes, user: @user %>
</div>