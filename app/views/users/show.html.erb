 <div class="container-fluid">
  <div class="row" style="background-color: #99ccff; color: #0066cc;">
  <h2 class="ml-5 pl-3">ユーザー詳細 (ユーザー名:  <%= @user.name %>)</h2>
  </div>
 </div>

<div class="container mt-4">
   <div class="row">
    <h3 class="col-sm-3" style="color: #0066cc;">ユーザー目標リスト</h3>
   </div>
 </div> 

 <div class="container mt-2" style="max-height : 400px; overflow: scroll; border: #99ccff 10px ridge;">
    <%= render 'user_purpose', purposes: @purposes, user: @user %>
 </div>


<!--新規目標作成ボタン-->
<%if current_user==@user%>
 <div class="container mt-4">
    <div class="row">
      <div class="offset-sm-9 col-sm-3">
        <%= link_to '新規目標の作成', new_purpose_path , class: "btn btn-lg btn-primary" %>
      </div>
    </div>
 </div>
<%end%>

<div class="container mt-4">
   <div class="row">
    <h3 class="col-sm-3" style="color: #0066cc;">レビューコメントリスト</h3>
   </div>
 </div> 

 <div class="container mt-2" style="max-height : 600px; overflow: scroll; border: #99ccff 10px ridge;">
    <%= render 'comment_list', review_purposes: @review_purposes, user: @user %>
</div>