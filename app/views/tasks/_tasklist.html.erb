   <table class="table table-striped">
    <thead>
      <tr>
        <th>タスクNo.</th>
        <th>check</th>
        <th>タスク</th>
      </tr>
    </thead>
    
    <tbody>
        <% tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><button class="btn btn-sm">check</button></td>
          <td>
              <%= task.content %>
              <button class="btn btn-sm btn-secondary">優先</button>
              <%= link_to 'edit', edit_task_path(@task), class: 'btn btn-primary btn-sm' %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
        <% end %>        
    </tbody>
  </table>