 <% purposes.each do |purpose| %>
                    <div class="row  border border-primary mb-1">
                         <div class="col-sm-2 p-0" style="background-color: #99ccff; text-align : center;">
                             <figure class="figure">
                                 <img class="mt-2 rounded figure-img " src="<%= gravatar_url(purpose.user, { size: 80 }) %>" alt="">
                                 <figcaption class="figure-caption"><%=link_to purpose.user.name, user_path(purpose.user) %>
                                 </figcaption>
                             </figure>
                             <%= render 'relationships/follow_button', user: purpose.user %>
                         </div>
                         
                         <div class="col-sm-10 ">
                                    <div class="row ml-1 mt-2" style="border-bottom: #99ccff 3px solid;">
                                        <small class="col-sm-1 mt-1">purpose:</small>
                                          <div class="col-sm-9" style="text_align: center;">
                                            <h3><%=purpose.content%></h3>
                                        </div>
                                        <div class="col-sm-2">
                                         <%=link_to "Review" , review_purpose_path(purpose), class: 'btn btn-info btn-sm'%>
                                        </div>
                                    </div>
                                     <!--最新usercomment-->
                                     <div class="row ml-1 mt-2">
                                         <small class="col-sm-6" style="color:blue">ユーザー最新コメント</small>
                                         <% if purpose.reviews.where(user_id: purpose.user.id).any? %>
                                            <small class="col-sm-6" style="color:blue">投稿日時:<%= purpose.reviews.where(user_id: purpose.user.id).last.created_at.strftime("%Y/%m/%d %H:%M") %></small>
                                        <%end%>
                                     </div>
                                     <div class="row ml-2">
                                         <div class="col-sm-11 border border-primary mb-1" style="min-height: 15px;">
                                            <% if purpose.reviews.where(user_id: purpose.user.id).any? %>
                                            <%= purpose.reviews.where(user_id: purpose.user.id).last.content %>
                                            <%end%>
                                         </div>
                                     </div>

                                     <!--最新comment-->
                                     <div class="row ml-1 mt-2">
                                          <small class="col-sm-6" style="color:blue">他ユーザー最新コメント</small>
                                          <% if purpose.reviews.where.not(user_id: purpose.user.id).any? %>
                                            <small class="col-sm-6" style="color:blue">投稿日時:<%= purpose.reviews.where.not(user_id: purpose.user.id).last.created_at.strftime("%Y/%m/%d %H:%M") %></small>
                                        <%end%>
                                     </div>
                                     <div class="row ml-2">
                                         <div class="col-sm-11 border border-primary" style="min-height: 15px;">
                                            <% if purpose.reviews.where.not(user_id: purpose.user.id).any? %>
                                            <%= purpose.reviews.where.not(user_id: purpose.user.id).last.content %>
                                        　  <%end%>
                                         </div>
                                     </div>
                         </div>
                    </div>
<% end %>